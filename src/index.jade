doctype html
html
    head
        title Yo Intervengo
        meta(charset="utf-8")
        meta(name="viewport",content="initial-scale=1, width=device-width")

        if env == 'dev'
            each file in css
                link(rel="stylesheet",href="#{file}")
            each file in lib
                script(type="text/javascript",src="#{file}")
            each file in js
                script(type="text/javascript",src="#{file}")
        else
            link(rel="stylesheet",href="styles/style.css")
            script(type="text/javascript",src="cordova.js")
            script(type="text/javascript",src="lib.js")
            script(type="text/javascript",src="app.js")

    body
        header(ng-if="!in('start')",ng-cloak)
            .title-bar
                button.back(ng-click="back()") Atras
            .search(ng-if="in('home')")
                tabs(active="q.type")
                label: input(ng-model="q.name", ng-change="show.list=true", type="search", placeholder="{{ searchMessage() }}")
                .options
                    button(ng-click="show.filter=!show.filter;show.list=false") {{show.filter?'Mapa':'Filtro'}}
                    button(ng-click="show.list=!show.list;show.filter=false") {{show.list?'Mapa':'Lista'}}

        #loading(ng-show="show.loading") Cargando ...
        section.content(ng-view,ng-cloak)