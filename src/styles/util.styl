@require 'values'
@require 'colors'

asCard()
  background white
  border-radius cardRadius
  box-shadow 0 2px 10px fade-out(black, 95%)
  display flex
  min-height cardHeight
  overflow hidden

withBottomShadow()
  &::after
    absolute left 0 top 100%
    content ''
    right 0
    height (headerHeight / 3)
    background linear-gradient(top, fade-out(black, 70%), fade-out(black, 99.99%))

asTopbar()
  background fade-out(colorGray1, 20%)
  height headerHeight
  position relative
  width 100%
  withBottomShadow()

scrollbar(thumbColor = #AAA)
  &::-webkit-scrollbar
    width 5px
    height 4px
  &::-webkit-scrollbar-thumb
    background fade-out(thumbColor, 50%)
    border-radius 2px
  &:hover::-webkit-scrollbar-thumb
    background fade-out(thumbColor, 5%)

// TODO: move to own element
cover()
  absolute top 0 left 0
  align-items center
  background-color light-grey - 10%
  clip-path polygon(0 0,100% 0,100% 80%,0 100%)
  display flex
  height 280px
  justify-content center
  overflow hidden
  width 100%
  z-index 0
  -webkit-clip-path polygon(0 0,100% 0,100% 80%,0 100%)
  &::after
    absolute top 0 left 0
    background-color colorGray3
    clip-path polygon(0 0,100% 0,100% 80%,0 100%)
    content ''
    height 100%
    width 100%
    z-index 1
    -webkit-clip-path polygon(0 99.2%, 100% 79.2%, 100% 80%, 0 100%)
