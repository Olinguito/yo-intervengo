global-reset()

*
  box-sizing border-box
  user-select none
  cursor default
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

input, textarea, p
  cursor initial
  user-select initial

a, a:hover, a:visited
  cursor pointer
  text-decoration none
  color inherit

input, textarea, button
  outline none

button::-moz-focus-inner
  border 0

html, body
  height 100%
  width 100%
  font-size 16px
  font-family sans-serif, arial