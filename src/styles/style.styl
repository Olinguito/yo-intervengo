@import colors

body
  font-family 'roboto-light'
  perspective 100px
  overflow hidden

::-moz-placeholder
  font-style italic
::-webkit-input-placeholder
  font-style italic

body > section
  absolute left 0 top 3rem
  bottom 0
  width 100%
  transition all .6s
  &.ng-leave
    z-index 98
    transform translateZ(0px)
  &.ng-leave.ng-leave-active
    transform translateZ(-30px)
    opacity 0.1
  &.ng-enter
    z-index 99
    transform translateY(100%)
    box-shadow 0 -2px 10px fade-out(black, 60%)
  &.ng-enter.ng-enter-active
    box-shadow 0 0 3px fade-out(black, 60%)
    transform translateY(0)


button
  border none
  background none
  color white

header
  width 100%
  height 3rem
  fixed top 0 left 0
  background fade-out(cgray,5%)
  z-index 999
  color white
  .title-bar
    height 3rem
    line-height 3rem
    h1
      text-align center
    .l-btns
      absolute left 0 top 0
      display inline-block
      height 100%
      button
        width 2.6rem
        position relative
        margin 0
        height 100%
      .back
        overflow hidden
        text-indent 1000px
        &:before
          content 'ï„„'
          display block
          text-indent 0
          absolute left 0 top 0
          font-family 'FontAwesome'
          font-size 2em
          height 100%
          width 100%
          line-height 3rem

.tabs
  width 90%
  position relative
  .tab
    width 30%
    margin 0
    text-align center
    line-height 1.9rem
    color white
    display inline-block
    border-radius 5px 5px 0 0
    vertical-align bottom
    transition line-height .4s
    &:hover
      line-height 2.1rem
      transition line-height .1s
    &.active
      line-height 2.5rem
    &:nth-of-type(1)
      background-color cblue
    &:nth-of-type(2)
      background-color corange
    &:nth-of-type(3)
      absolute right 0 bottom 0
      background-color cpurple

[item]
  width 100%
  background white
  padding .8rem .5rem
  clearfix()
  a
    float left
    height 4.5rem
    width 4rem
    background linear-gradient(top, cgray+20%, cgray+10%)
    border-radius 5px
    overflow hidden
    margin-right 10px
  h3
    margin .5em 0
  .buttons
    white-space nowrap
  button
    border-radius 5px
    height 1.8rem
    width 28%
    &:not(:first-of-type)
      margin-left 5px
      width 22%
    &.join
      background cgray
    &.like
      background cblue
    &.dislike
      background corange


/*new for*/
#new
  color gray
  overflow-y auto
  p
    font-style italic
    &.info
      font-size 0.85em
      color gray+8%
      text-align justify
  fieldset
    border-bottom 1px white - 10% solid
    padding 1rem 2rem
  label
    height 2rem
    line-height 2rem
    text-align center
    color white
    display inline-block
    border-radius 5px
    overflow hidden
    margin .8rem 0
    /*white-space nowrap*/
    background cgray
  input[type="radio"]
    absolute top 0 left -9999px
    z-index -1
    visibility hidden
    &:checked+label:first-of-type
      background cblue
    &:checked+label:last-of-type
      background corange
  textarea
    height 5em
  input
    line-height 1.5em
  input, textarea
    padding 5px 10px
    border-radius 5px
    border 1px solid white - 15%
    border-top 1px solid white - 8%
    &:focus
      box-shadow 0 0 4px white - 12%
  input, textarea, p
    width 100%
    display inline-block
    margin .3em 0
  .small
    width 48%
  .small.right
    margin-left 4%

  button[type="submit"]
    width 100%
    background corange
    border-radius 5px
    height 2.2rem
    display block
    margin auto
    margin-top .5em

