@import 'values'
@import 'colors'

#boot
  align-items center
  display flex
  flex-direction column
  height 100%
  justify-content center
  overflow hidden
  width 100%

  #logo
    min-width 418px // actual logo width

    &.loading
      #logo-marker
        animation bouncing-marker 1.5s ease infinite

    @media queryMobile
      transform scale(0.6)

  #logo-marker
    transform translateY(0)
    transition translate 0.4s

    .marker-box
      fill colorOrange - 5%
    .marker-tip
      fill colorOrange - 15%
    .marker-inner-shadow
      fill #000
      fill-opacity 0.3
    .marker-inner-box
      fill colorOrange

    .marker-box, .marker-tip, .marker-inner-box
      transition 0.5s fill

    &:hover
      .marker-box
        fill colorBlue - 5%
      .marker-tip
        fill colorBlue - 15%
      .marker-inner-box
        fill colorBlue

    @keyframes bouncing-marker
      0%, 20%, 50%, 80%, 100%
        transform translateY(0)
      40%
        transform translateY(-30px)
      60%
        transform translateY(-15px)

  article
    color white
    font-size 1.1em
    max-height 0
    padding 1rem
    opacity 0
    transition max-height 0.7s
    &.show
      max-height 180px
      animation show 0.5s ease 0.4s forwards

      @keyframes show
        from
          opacity 0
        to
          opacity 1

    p
      line-height 2em
      text-align center
    img
      cursor pointer
      margin-right 0.5em
      vertical-align middle
