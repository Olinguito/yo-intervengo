@import 'values'
@import 'colors'

#boot
  width 100%
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center

  #logo
    min-width 418px // actual logo width

    &.loading
      #logo-marker
        animation bouncing-marker 1.5s ease infinite

    @media queryMobile
      transform scale(0.6)

  #logo-marker
    transform translateY(0)
    transition translate 0.4s

    .marker-box
      fill colorOrange - 5%
    .marker-tip
      fill colorOrange - 15%
    .marker-inner-shadow
      fill #000
      fill-opacity 0.3
    .marker-inner-box
      fill colorOrange

    .marker-box, .marker-tip, .marker-inner-box
      transition 0.5s fill

    &:hover
      .marker-box
        fill colorBlue - 5%
      .marker-tip
        fill colorBlue - 15%
      .marker-inner-box
        fill colorBlue

    @keyframes bouncing-marker
      0%, 20%, 50%, 80%, 100%
        transform translateY(0)
      40%
        transform translateY(-30px)
      60%
        transform translateY(-15px)
