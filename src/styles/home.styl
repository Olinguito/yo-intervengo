@import colors

header
  .search
    width 100%
    margin auto
    absolute bottom -2.5rem
    transition opacity .4s
    .tabs
      margin auto
      width 90
    &.ng-enter, &.ng-leave.ng-leave-active
      opacity 0
    &.ng-enter.ng-enter-active
      opacity 1
    label
      width 100%
      height 2.5rem
      padding .2rem 0
      display block
      background-color white
      box-shadow 0 0 6px fade-out(black, 50%)
      position relative
      text-align center
      input
        text-align left
        border none
        margin auto
        display inline-block
        vertical-align middle
        line-height 1.9rem
        width 90%
  .options
    absolute top 100% left 10%
    width 80%
    height  4rem
    button
      width 50%
      height 2rem
      background linear-gradient(top, fade-out(cgray, 5%) 50%,fade-out(cgray, 15%))
      &:first-of-type
        border-radius 0 0 0 5px
        border-right 1px solid fade-out(cgray, 40%)
      &:last-of-type
        border-radius 0 0 5px 0
#home
  #map
    position absolute !important
    top 0rem
    bottom 0
    z-index 0
    width 100%
  .list
    absolute top 0 bottom 0
    width 100%
    background fade-out(white, 20%)
    padding-top 5.5rem
    overflow auto
    [item]
      border-top 1px solid white - 10%
      &:last-of-type
        margin-bottom 3rem
        border-bottom 1px solid white - 10%

footer
  fixed bottom 0 left 0
  z-index 999
  width 100%
  height 3rem
  background fade-out(cgray, 5%)
  box-shadow 0 0px 6px fade-out(black, 50%)
  white-space nowrap
  .button
    color fade-out(white,30%)
    height 3rem
    line-height 3rem
    background none
    border none
    display inline-block
    overflow hidden
    padding 0 5px
    font-size 0.85em
    text-align center
    position relative
    &:before
      content ''
      height 2.4rem
      width 2.4rem
      display inline-block
      vertical-align middle
      margin-right 3px
      background-color fade-out(white,30%)
