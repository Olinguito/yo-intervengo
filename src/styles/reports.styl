rightPanelWidth = 20rem
headerHeight = 4rem

#reports

  #map-area
    position relative
    height 100%
    width 100%

    core-toolbar
      absolute top 0 left 0
      z-index 1
      width 100%
      background linear-gradient(top, fade-out(black, 50%), fade-out(black, 99.9%))
      &.bottom
        background linear-gradient(bottom, fade-out(black, 50%), fade-out(black, 99.9%))
        absolute bottom 0 left 0
        top initial

    leaflet-map
      height 100%
      width 100%
      /*tmp style*/
      display flex
      justify-content center
      align-items center

  > router-view
    absolute left 0 top 0
    width 100%

yi-search-tool
  absolute left 0 top 0
  padding-right rightPanelWidth
  z-index 1

yi-card-list
  absolute right 0 top 0
  background fade-out(colorBlack, 20%)
  display flex
  flex-direction column
  justify-content space-around
  height 100%
  padding headerHeight 1rem
  width rightPanelWidth
  z-index 2

  yi-card
    margin 1rem auto

// Sub sections
@import 'report-detail'
