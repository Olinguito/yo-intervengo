@import 'util'

#profile
  display flex
  flex-direction column
  background pale-grey
  position relative

  nav
    z-index 1
    asTopbar()

  yi-cover
    cover()

  main
    flex 1
    overflow-x hidden
    overflow-y auto
    padding 2rem 0
    position relative
    scrollbar()

    > section
      width 90%
      margin 0.5rem auto
      max-width cardWidth

  section.info, section.actions
    asCard()

  section.info
    min-height 0
    .content
      color colorGray1
      display flex
      flex-direction column
      flex 1
      justify-content center
      padding 1rem
      h1
        font-size 1.6em
      p
        font-weight normal
        line-height 1.3em
    figure
      width 7rem
      height 7rem
      padding 1.5rem
      yi-icon
        height 100%
        width 100%
        &::shadow .show
          stroke light-grey - 10%
          stroke-width 1 !important

  section.actions
    flex-direction column
    margin-top 2rem
    .action
      align-items center
      display flex
      flex 1
      flex-direction column
      justify-content center

  yi-tabs
    height 2.2rem
