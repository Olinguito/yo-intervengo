template
  require(from="../icon/yi-icon")

  header
    figure.title(
      click.trigger="openDetail()",
      title="Mas informacion ...",
      style.bind="photoCover"
    )
      figcaption
        h1(if.bind="report.title") ${report.title}
        h1.empty(if.bind="!report.title")
        h2 ${report.category.name}
    figure.category(click.trigger="onSelect(report)", title="Mostrar en el mapa")
      yi-icon(icon="${report.category.icon}")
  p.description(if.bind="report.description") ${report.description}
  p.description.empty(if.bind="!report.description")
  footer
    button(click.delegate="support()", disabled.bind="supportBtnDisabled")
      | ${supportText}
      yi-icon(icon="hand")
    output(title="${report.supportersCount} Respaldos") ${report.supportersCount}
