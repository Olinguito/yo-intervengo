@import '../../../styles/colors'

cardWidth = 245px
cardHeight = 165px
headerHeight = (cardHeight * 0.5)
descHeight = (cardHeight * 0.3)
footerHeight = (cardHeight * 0.2)

cgray1 = #f2f2f2
cgray2 = #e5e5e5
cgray3 = #d9d9d9

:host
  background-color #FFFFFF
  box-shadow 0 2px 5px rgba(0, 0, 0, 0.5)
  border-radius 5px
  flex-shrink 0
  overflow hidden
  transition box-shadow 0.4s
  max-width cardWidth
  *
    margin 0
    box-sizing border-box

:host(.new.request)
  box-shadow 0 0 20px 1px colorBlue
  border 2px solid colorBlue + 20%
:host(.new.complain)
  box-shadow 0 0 20px 1px colorOrange
  border 2px solid colorOrange + 20%

.empty
  display none
:host(.new)
  .empty
    display block

styleByType(type, typeColor)
  :host(.{type})
    .category,
    footer output,
    footer output::after
      background-color typeColor
    footer button
      color typeColor

      yi-icon::shadow .show
        stroke typeColor

      &:hover
        background-color typeColor
        color white
        yi-icon::shadow .show
          stroke white
        + output
          background-color cgray1
          color typeColor

      &:active
        background-color activeColor(typeColor)
        transition background-color 0.1s
        + output::after
          background-color activeColor(typeColor)
          transition background-color 0.1s

    figure.category:hover
      background-color activeColor(typeColor)

// set styles by type
styleByType(complain, colorOrange)
styleByType(request, colorBlue)

header
  display flex
  height headerHeight
  width 100%
  cursor pointer


  figure.category
    transition background-color 0.2s
    width headerHeight

    yi-icon
      height 100%
      padding 0.4rem
      width 100%

  figure.title
    background-repeat no-repeat
    background-position center
    background-size cover
    flex 1
    overflow hidden
    padding 1rem 0.8rem
    position relative
    &::before
      absolute left top
      background linear-gradient(top, #c2c2c2, #909090)
      bottom 0
      content ''
      display block
      mix-blend-mode multiply
      transition background 0.3s
      right 0
      z-index 0

    &:hover::before
      background linear-gradient(top, #e0e0e0, #cdcdcd)

    figcaption
      absolute left 0 top 0
      color white
      height 100%
      text-shadow 0 0 6px black + 45%
      padding 0.5rem 1rem
      width 100%
      z-index 1

    h1
      font-size 1.05em
      font-weight lighter
      height 2.6rem
      line-height (2.6rem / 2)
      margin-bottom 0.9rem
      overflow hidden
      &::first-letter
        text-transform capitalize

      &.empty
        background fade-out(white - 5%,20%)
        margin-right 1rem
        margin-bottom 0.9rem
        height 1.1em

    h2
      font-size 0.6em
      font-weight normal
      text-transform uppercase


.description
  font-family 'Roboto Slab'
  font-size 0.9em
  height descHeight
  line-height ((descHeight - 6px)/ 2)
  padding 3px 1rem
  overflow hidden
  // text overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
  &::first-letter
    text-transform capitalize
  &.empty
    background white - 10%

footer
  background cgray1
  display flex
  flex-direction row-reverse
  height footerHeight

  output
    background-color cgray2
    color white
    font-size 1.1em
    height 100%
    line-height footerHeight
    position relative
    text-align center
    transition color 0.2s, background-color 0.2s
    width headerHeight

    &::after
      absolute right (-1 * footerHeight / 8) top (3*footerHeight / 8)
      background-color cgray2
      content ''
      height (footerHeight / 4)
      transform rotate(45deg)
      transition background-color 0.2s
      width (footerHeight / 4)


  button
    border none
    background transparent
    color cgray3
    cursor pointer
    flex 1
    font-family Roboto
    font-size 1.05em
    font-weight lighter
    outline none
    padding 0.4rem 1rem
    text-align right
    transition color 0.2s, background-color 0.2s

    yi-icon
      height 22px
      width 22px
      vertical-align middle
      margin-left 1.4rem

      &::shadow .show
        stroke cgray3
        transition stroke 0.2s
