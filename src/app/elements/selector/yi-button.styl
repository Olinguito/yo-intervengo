@import '../../../styles/colors'
@import '../../../styles/values'

:host
  display block
  text-align right
  white-space nowrap

.title
  display inline-block
  margin 0 0.5rem
  text-transform capitalize
  vertical-align middle

.btn
  background colorGray1
  border-radius 50%
  box-shadow 0 0 1rem fade-out(black, 50%)
  box-sizing border-box
  display inline-flex
  height btnSize
  vertical-align middle
  width btnSize

  &:active button
    box-shadow 0 0 0.2rem fade-out(black, 50%)
    transform scale(1.03)

  button
    background colorGray2
    border-radius 50%
    border none
    box-shadow 0 0 0.4rem fade-out(black, 70%)
    color white
    display block
    height 79%
    margin auto
    outline none
    padding 0
    text-align center
    transition all 0.06s
    width 79%

    yi-icon
      vertical-align middle

content[select=yi-button]::content
  > yi-button
    display none

:host([selected='true'])
  .title, .btn
    display none

  content[select=yi-button]::content
    > yi-button
      display block

:host([selected='false'])
  display none !important
