template
  require(from="yi/elements/form/responsive-form")
  require(from="yi/elements/controls/yi-photo-button")
  require(from="yi/elements/icon/yi-icon")

  responsive-form(class="${report.typeName}", submit.call="saveReport()")
    section.info.left
      .cat
        figure: yi-icon(icon="${report.category.icon}")
        h2 ${report.category.parent.name}
        h3 ${report.category.name}
      .fields
        input(placeholder="Title", tabindex="1", autofocus, value.bind="report.title", required)
        textarea(placeholder="Report Description", tabindex="1", value.bind="report.description", required)
    section.map.right
      i Locate your report on the map
      leaflet-map(
        latitude.two-way="center.lat",
        longitude.two-way="center.lng",
        zoom="17",
        options.one-time="mapConf",
        tileServer.one-time="mapConf.tiles"
      )
        yi-marker(class="${report.type==0?'alt':''}", icon="${report.category.icon}", fixed-marker)

      input(placeholder="Address", tabindex="1", required)
    section.photo.right
      i Add a photo to your report
      figure
        yi-photo-button(title="Add photo", filechange.call="photoSelected()")
